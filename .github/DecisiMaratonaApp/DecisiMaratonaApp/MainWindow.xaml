<Window x:Class="DecisiMaratonaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DecisiMaratonaApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="TxtNomeAtleta"  Margin="10" Text="Inserisci il nome di un'atleta"/>
        <TextBox x:Name="TxtCitta"  Margin="10" Text="Inserisci il nome dellà città"/>
            <StackPanel Orientation="Horizontal">
            <Button x:Name="BtnTempo"  Margin="10" Content="Calcola Tempo" Click="BtnTempo_Click"/>
            <Button x:Name="BtnLeggiFile" Margin="10" Content="Leggi tutto da file" Click="BtnLeggiFile_Click"/>
            </StackPanel>
        <DataGrid x:Name="DgElencoDati" Margin="10" Height="230"/>
    </StackPanel>
</Window>
